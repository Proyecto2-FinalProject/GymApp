@{
    ViewData["Title"] = "Admin Page";
    Layout = "../Shared/_LayoutRoutines.cshtml";
}

<script src="~/js/Pages/Admin/Admin.js" defer></script>
<link rel="stylesheet" href="~/css/routines.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap">

<div class="container">
    <main>
        <h2>Welcome Administrator!</h2>
        <div class="form-container">
            <form id="assignRoleForm" action="submit">
                <div style="margin-bottom: 20px;">
                    <label for="selectUser" style="display: block; font-size: 1.2em;">Select User:</label>
                    <select id="selectUser" name="userId" style="width: 100%; padding: 10px; font-size: 1.2em;">
                        <!-- Users will be loaded here -->
                    </select>
                </div>
                <div style="margin-bottom: 20px;">
                    <label for="selectRole" style="display: block; font-size: 1.2em;">Select Role:</label>
                    <select id="selectRole" name="roleId" style="width: 100%; padding: 10px; font-size: 1.2em;">
                        <!-- Roles will be loaded here -->
                    </select>
                </div>
                <div class="button-container">
                    <button type="submit" style="font-size: 1.2em; padding: 10px 20px; background-color: #1e4f4f; color: white; border: none; border-radius: 5px; cursor: pointer;" onmouseover="this.style.backgroundColor='#2a7b9c';" onmouseout="this.style.backgroundColor='#3ba4c7';">
                        Assign Role
                    </button>
                </div>
            </form>
        </div>
    </main>
</div>




