@{
    ViewData["Title"] = "Admin Page";
    Layout = "../Shared/_LayoutUser.cshtml";
}

<link rel="stylesheet" href="~/css/admin.css" />


<div class="container">
    <main>
        <h1 class="display-4">Welcome Administrator!</h1>

        <section class="function-section container">
            <a asp-controller="Admin" asp-action="AssignRole" class="function-card">
                <h2>Assign User Roles</h2>

                <p>In this section, you can assign user roles.</p>
            </a>

            <a asp-controller="Admin" asp-action="ManageUser" class="function-card">
                <h2>Manage Users Information</h2>

                <p>In this section, you can update users information.</p>
            </a>
        </section>
        

    </main>
</div>
