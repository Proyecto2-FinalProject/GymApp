@{
    ViewData["Title"] = "Equipment Management";
    Layout = "../Shared/LayoutEquipment.cshtml";
}
<script src="~/js/pages/Equipments/equipments.js></script>
<link rel="stylesheet" href="~/css/Equipments.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap">

<div class="container">
    <main>
        <h1>Equipment Management</h1>

        <div class="form-container">
            <h2>Create Equipment</h2>
            <form id="createEquipmentForm" action="submit">
                <label for="name">Name</label>
                <input type="text" id="name" name="name">

                <label for="description">Description</label>
                <input type="text" id="description" name="description">

                <label for="quantity">Quantity</label>
                <input type="number" id="quantity" name="quantity">

                <label for="status">Status</label>
                <input type="text" id="status" name="status">

                <div class="button-container">
                    <button type="submit">Create</button>
                </div>
            </form>
        </div>

        <div class="form-container">
            <h2>Edit Equipment</h2>
            <form id="editEquipmentForm" action="submit">
                <input type="hidden" id="edit-equipment-id" name="equipment_id">

                <label for="edit-name">Name</label>
                <input type="text" id="edit-name" name="name">

                <label for="edit-description">Description</label>
                <input type="text" id="edit-description" name="description">

                <label for="edit-quantity">Quantity</label>
                <input type="number" id="edit-quantity" name="quantity">

                <label for="edit-status">Status</label>
                <input type="text" id="edit-status" name="status">

                <div class="button-container">
                    <button type="submit">Edit</button>
                </div>
            </form>
        </div>

        <div class="form-container">
            <h2>Delete Equipment</h2>
            <form id="deleteEquipmentForm" action="submit">
                <label for="delete-equipment-id">Equipment ID</label>
                <input type="number" id="delete-equipment-id" name="equipment_id">

                <div class="button-container">
                    <button type="submit">Delete</button>
                </div>
            </form>
        </div>

        <div class="table-container">
            <h2>Equipment List</h2>
            <table id="equipmentTable" class="display">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </main>
</div>

