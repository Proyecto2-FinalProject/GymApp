

<script src="~/js/Pages/Equipments/equipments.js" defer></script>

<link rel="stylesheet" href="~/css/StyleEquipment.css" />


<div class="container">
    <main>
        <h1>Gestión de Equipos</h1>

        <!-- Formulario de creación de equipos -->
        <div class="form-container">
            <h2>Crear Equipo</h2>
            <form id="createEquipmentForm" action="submit">
                <label for="name">Nombre</label>
                <input type="text" id="name" name="name" required>

                <label for="description">Descripción</label>
                <input type="text" id="description" name="description" required>

                <label for="quantity">Cantidad</label>
                <input type="number" id="quantity" name="quantity" required>

                <label for="status">Estado</label>
                <input type="text" id="status" name="status" required>

                <div class="button-container">
                    <button type="submit">Crear</button>
                </div>
            </form>
        </div>

        <!-- Formulario de edición de equipos -->
        <div class="form-container" id="editEquipmentSection" style="display:none;">
            <h2>Editar Equipo</h2>
            <form id="editEquipmentForm" action="submit">
                <input type="hidden" id="editEquipmentId" name="equipmentId">

                <label for="editName">Nombre</label>
                <input type="text" id="editName" name="name" required>

                <label for="editDescription">Descripción</label>
                <input type="text" id="editDescription" name="description" required>

                <label for="editQuantity">Cantidad</label>
                <input type="number" id="editQuantity" name="quantity" required>

                <label for="editStatus">Estado</label>
                <input type="text" id="editStatus" name="status" required>

                <div class="button-container">
                    <button type="submit">Guardar Cambios</button>
                </div>
            </form>
        </div>

        <!-- Tabla de lista de equipos -->
        <div class="table-container">
            <h2>Lista de Equipos</h2>
            <table id="equipmentTable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </main>
</div>

<script src="~/js/pages/Equipments/equipments.js" defer></script>