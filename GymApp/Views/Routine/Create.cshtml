@{
    ViewData["Title"] = "Create Routine";
    Layout = "../Shared/_LayoutRoutines.cshtml";
}
<script src="~/js/pages/Routines/createRoutines.js" defer></script>
<link rel="stylesheet" href="~/css/routines.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap">


    <div class="container">
        <main>
            <h1>Create Routine</h1>
            <div class="form-container">
                <form id="createRoutineForm" action="submit">
                    <label for="exercise-name">Member ID</label>
                    <input type="text" id="member_id" name="member_id">

                    <label for="instructor_id">Instructor ID</label>
                    <input type="text" id="instructor_id" name="instructor_id">

                    <label for="measurement_appointment_id">Measurement Appointment ID</label>
                    <input type="text" id="measurement_appointment_id" name="measurement_appointment_id">

                    <label for="sets">Name</label>
                    <input type="text" id="name" name="name">

                    <label for="description">Description</label>
                    <input type="text" id="description" name="description">

                    <label for="creation_date">Creation Date</label>
                <input type="datetime-local" id="creation_date" name="creation_date">


                    <div class="button-container">
                        <button type="submit">Create</button>
                    </div>
                </form>
            </div>
        </main>
    </div>
